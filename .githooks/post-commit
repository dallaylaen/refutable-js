#!/bin/sh

AUTOFILES="docs/js/refute.js docs/js/refute.min.js docs/man"

modified() {
    git status --porcelain -- "$@" | grep -q '^'
}

if modified $AUTOFILES && ! modified lib test; then
    # TODO some checking
    git add $AUTOFILES
    git commit $AUTOFILES -m "[auto] Update autogenerated $AUTOFILES" --no-verify
fi


